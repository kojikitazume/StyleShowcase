<!DOCTYPE html>
<html>
<head>
  <title>Stylists List</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbo-track': 'reload' %>
</head>
<body>
  <header>
  </header>
  <main>
    <section id="stylists">
      <h2>List of Stylists</h2>
      <ul>
        <% @stylists.each do |stylist| %>
          <li>
            <h3><%= link_to stylist.name, stylist_path(stylist) %></h3>
            <p><%= stylist.description %></p>
          </li>
        <% end %>
      </ul>
    </section>
  </main>
  <footer>
  </footer>
</body>
</html>
