<h3>Reviews</h3>
<%= form_with model: [ @stylist, @review ], local: true do |form| %>
  <div>
    <%= form.label :rating %>
    <%= form.number_field :rating, in: 1..5 %>
  </div>
  <div>
    <%= form.label :content %>
    <%= form.text_area :content %>
  </div>
  <div>
    <%= form.submit 'Submit Review' %>
  </div>
<% end %>

<h3>All Reviews</h3>
<% @stylist.reviews.each do |review| %>
  <div>
    <% if review.user %>
      <p><strong><%= review.user.email %></strong> rated <%= review.rating %> stars</p>
    <% else %>
      <p><strong>Anonymous</strong> rated <%= review.rating %> stars</p>
    <% end %>
    <p><%= review.content %></p>
    <p>Average Rating: <%= @stylist.average_rating %> stars</p>
  </div>
<% end %>
